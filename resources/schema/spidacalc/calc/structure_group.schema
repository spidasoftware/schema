{
  "type": "object",
  "id": "#/spidacalc/calc/structure_group.schema",
  "description": "A mapping of structures to analyze",
  "required": [
    "primaryStructureId",
    "primaryStructure",
    "neighbors",
    "spanningWireConnections"
  ],
  "properties": {
    "primaryStructureId": {
      "type": "string",
      "description": "The ID of the primary structure's parent"
    },
    "primaryStructure": {
      "description": "The primary structure to analyze",
      "$ref": "../../spidacalc/calc/structure.schema"
    },
    "neighbors": {
      "description": "List of neighbor structures to include in analysis finite model",
      "type": "array",
      "items": {
        "$ref": "../../spidacalc/calc/structure.schema"
      }
    },
    "spanningWireConnections": {
      "description": "A list of spanning wire connection mappings between source and target structures",
      "type": "array",
      "items": {
        "description": "A mapping of (sourceStructureId, sourceWireId) -> (targetStructureId, targetWireId) for spanning wire connections",
        "type": "object",
        "required": [
          "sourceStructureId",
          "sourceWireId",
          "targetStructureId",
          "targetWireId"
        ],
        "properties": {
          "sourceStructureId": {
            "type": "string"
          },
          "sourceWireId": {
            "type": "string"
          },
          "targetStructureId": {
            "type": "string"
          },
          "targetWireId": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
